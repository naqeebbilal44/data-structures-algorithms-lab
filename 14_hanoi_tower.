#include<stdio.h>
void hanoitower(int n,char source,char helper,char destiny){
    if (n==0) return;
    hanoitower(n-1,source,destiny,helper);
    printf("%c to %c\n",source,destiny);
    hanoitower(n-1,helper,source,destiny);
    return;
}
int main(){
int n;
printf("enter the number of disks:-->");
scanf("%d",&n);
hanoitower(n,'A','B','C'); // a b c are disks
return 0;
}
