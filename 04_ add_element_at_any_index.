#include <stdio.h>

// Function to insert element at given position
int insertAt(int arr[], int n, int pos, int value) {
    int i;
    if(pos < 0 || pos > n) {
        printf("Invalid position!\n");
        return n;   // size unchanged
    }
    for(i = n; i > pos; i--) {
        arr[i] = arr[i-1];   // shift right
    }
    arr[pos] = value;
    return n+1;  // increase size
}

void display(int arr[], int n) {
    int i;
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int arr[100], n, pos, value, i;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter position to insert (0 to %d): ", n);
    scanf("%d", &pos);
    printf("Enter value to insert: ");
    scanf("%d", &value);

    n = insertAt(arr, n, pos, value);  // function call

    printf("Array after insertion:\n");
    display(arr, n);

    return 0;
}