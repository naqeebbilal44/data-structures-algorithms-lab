#include <stdio.h>

// Function to delete an element at given position
int deleteAt(int arr[], int n, int pos) {
    int i;
    if(pos < 0 || pos >= n) {
        printf("Invalid position!\n");
        return n;   // size unchanged
    }
    for(i = pos; i < n-1; i++) {
        arr[i] = arr[i+1];   // shift left
    }
    return n-1;  // decrease size
}

void display(int arr[], int n) {
    int i;
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int arr[100], n, pos, i;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter position to delete (0 to %d): ", n-1);
    scanf("%d", &pos);

    n = deleteAt(arr, n, pos);  // function call

    printf("Array after deletion:\n");
    display(arr, n);

    return 0;
}